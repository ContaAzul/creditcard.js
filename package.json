{
  "name": "creditcard.js",
  "version": "2.1.3",
  "description": "A simple library for credit-card validation in JavaScript",
  "main": "src/creditcard.js",
  "repository": "ContaAzul/creditcard.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "npm run check && npm run build:min",
    "build:watch": "rollup -c -w",
    "build:min": "rollup -c --environment BUILD:production",
    "format": "prettier --write './src/**/*.js' './specs/**/*.js'",
    "lint": "eslint src specs",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "cov": "jest --coverage",
    "cov:serve": "npm run cov && static-server .coverage/lcov-report --port 3000 --no-nocache",
    "cov:publish": "npm run cov && cat ./.coverage/lcov.info | coveralls",
    "check": "npm run test && npm run format && npm run lint",
    "prepublish": "npm run build"
  },
  "keywords": [
    "credit",
    "card",
    "money",
    "validator"
  ],
  "author": "@ContaAzul",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.1",
    "eslint": "^4.9.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^1.0.0-rc.8",
    "jest": "^23.0.1",
    "prettier": "1.13.5",
    "rollup": "^0.56.5",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-uglify": "^3.0.0",
    "static-server": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check"
    }
  }
}
