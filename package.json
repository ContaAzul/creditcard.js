{
  "name": "creditcard.js",
  "version": "3.0.20",
  "description": "A simple library for credit-card validation in JavaScript",
  "main": "dist/creditcard.js",
  "repository": "ContaAzul/creditcard.js",
  "author": "@ContaAzul",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn build:production",
    "build:watch": "rollup -c -w",
    "build:production": "rollup -c",
    "format": "prettier --write './src/**/*.js'",
    "lint": "eslint src",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "cov": "jest --coverage",
    "cov:serve": "yarn cov && static-server .coverage/lcov-report --port 3000 --no-nocache",
    "cov:publish": "yarn cov && cat ./.coverage/lcov.info | coveralls",
    "release": "release-it --config release-it.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "yarn lint"
    ]
  },
  "keywords": [
    "credit",
    "card",
    "money",
    "validator"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@commitlint/format": "^12.1.4",
    "@release-it/conventional-changelog": "^3.3.0",
    "babel-jest": "^26.6.3",
    "conventional-changelog": "^3.1.24",
    "conventional-changelog-conventionalcommits": "^4.6.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.2.2",
    "jest": "^26.6.3",
    "lint-staged": "^9.5.0",
    "prettier": "^2.2.1",
    "release-it": "^14.11.6",
    "rollup": "^2.36.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "static-server": "^2.2.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT"
}
